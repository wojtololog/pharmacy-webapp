@model PharmacyWebApp.Models.ContainerViewModel
@{
    ViewBag.Title = "AddContainer";
}

<link href="~/Content/css/select2.css" rel="stylesheet" />
<link href="~/Scripts/Chosen/chosen.css" rel="stylesheet" />
<script src="~/Scripts/Chosen/chosen.jquery.js"></script>
<br /><br />

@Html.ValidationSummary()

@if (Model.Message != null)
{
    <div style="border:solid 1px green">
        @Model.Message
    </div>
}

@using (Html.BeginForm("AddContainer", "Medicine", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row" style="text-align: center">
        <div class="form-group">
            @Html.LabelFor(m => m.MedicineSize.MedicineId, new { @class = "col-md-5 control-label" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.MedicineSize.MedicineId, new SelectList(Model.Medicines, "MedicineId", "Name", Model.MedicineSize.MedicineId), new { @class = "form-control chosen-select", style = "text-align: center" })
                @Html.ValidationMessageFor(m => m.MedicineSize.MedicineId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MedicineSize.Value, new { @class = "col-md-5 control-label" })
            <div class="col-md-2" style="text-align: center; vertical-align: central">
                @Html.TextBoxFor(m => m.MedicineSize.Value, new { @class = "form-control input-sm" })
                @*@Html.ValidationMessageFor(m => m.MedicineSize.Value, "", new { @class = "text-danger" })*@
            </div>
            <div class="col-md-1" style="text-align: center; vertical-align: central " >
                @Html.DropDownListFor(m => m.MedicineSize.Unit, new SelectList(Model.Units, "Value", "Text", Model.MedicineSize.Unit), new { @class = "form-control chosen-select", style = "text-align: center" })
            </div>
    </div>

        @*<div class="form-group">
            @Html.LabelFor(m => m.MedicineSize.Unit, new { @class = "col-md-5 control-label" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.MedicineSize.Unit, new SelectList(Model.Units, "Value", "Text", Model.MedicineSize.Unit), new { @class = "form-control chosen-select", style = "text-align: center" })
                @Html.ValidationMessageFor(m => m.MedicineSize.Unit, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.MedicineSize.Image, new { @class = "col-md-5 control-label" })
            <div class="col-md-3">
                <input type="file" name="file" id="file" />
                @Html.ValidationMessageFor(m => m.MedicineSize.Image, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <br /><br />

    <div class="row" style="text-align: center">
        <div class="form-group">
            @Html.LabelFor(m => m.PharmacyKey, new { @class = "col-md-5 control-label" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.PharmacyKey, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PharmacyKey, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row" style="text-align: center">
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Dodaj lek do bazy" name="command" class="btn btn-default" />
            </div>
        </div>

    </div>
}
<script>
    $('.chosen-select').chosen();
</script>
